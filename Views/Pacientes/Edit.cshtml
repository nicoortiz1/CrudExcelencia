@model CrudExcelencia.Models.Paciente

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["MensajeExito"] != null)
{
    <div class="alert alert-success">@TempData["MensajeExito"]</div>
}

@if (TempData["MensajeError"] != null)
{
    <div class="alert alert-danger">@TempData["MensajeError"]</div>
}

<div class="row" style="margin-top:30px">
    <div class="col-sm-12">
        <div class="panel panel-warning">
            <div class="panel-heading">
                <h4>Editar paciente</h4>
            </div>
            <div class="panel-body">
                <form action="@Url.Action("Editar", "Pacientes")" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="Id" value="@Model.Id" />
                    <div class="form-group
">
                        <label>Nombres</label>
                        <input type="text" class="form-control" name="Nombres" value="@Model.Nombres" />
                    </div>
                    <div class="form-group
">
                        <label>Apellidos</label>
                        <input type="text" class="form-control" name="Apellidos" value="@Model.Apellidos" />
                    </div>
                    <div class="form-group
">
                        <label>DNI</label>
                        <input type="number" class="form-control" name="DNI" value="@Model.DNI" />
                    </div>
                    <div class="form-group
">
                        <label>Fecha Nacimiento</label>
                        <input type="date" class="form-control" name="FechaNacimiento" value="@Model.FechaNacimiento" />
                    </div>
                    <div class="form-group
">
                        <label>Telefono</label>
                        <input type="text" class="form-control" name="Telefono" value="@Model.Telefono" />
                    </div>
                    <div class="form-group
">
                        <label>Correo</label>
                        <input type="email" class="form-control" name="Correo" value="@Model.Correo" />
                    </div>
                    <button type="submit" class="btn btn-primary">Editar</button>
                    <a class="btn btn-warning" href="@Url.Action("Inicio", "Pacientes")">Volver</a>
                </form>
            </div>
        </div>
    </div>
</div>
